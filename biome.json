{
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noFloatingPromises": "error",
				"noMisusedPromises": "error"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"includes": [
			"**",
			"!!**/node_modules",
			"!!**/dist",
			"!!**/.next",
			"!!**/.turbo",
			"!!**/coverage",
			"!!**/playwright-report"
		]
	}
}